{
  "name": "litera.id",
  "version": "0.2.0",
  "description": "Online library web application made to digitalize librarians and visitors on their daily library operation.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack --no-lint",
    "build:lint": "next build --turbopack",
    "start": "next start",
    "db": "knex --knexfile src/database/init.ts",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:coverage:summary": "jest --coverage --coverageProvider=v8 --coverageReporters=text-summary",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress run --headed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report:json": "eslint . -f json -o tests/results/eslint-report.json",
    "lint:report:html": "eslint . -f html -o tests/results/eslint-report.html"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@shadcn/ui": "^0.0.4",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "jose": "^6.1.1",
    "js-cookie": "^3.0.5",
    "knex": "^3.1.0",
    "next": "15.5.4",
    "objection": "^3.1.5",
    "objection-js-soft-delete": "^3.0.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "swiper": "^12.0.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^27.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "cypress": "^15.6.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "eslint-formatter-html": "^2.7.3",
    "jest": "^27.0.0",
    "tailwindcss": "^4",
    "ts-jest": "^27.0.0",
    "typescript": "^5"
  }
}
